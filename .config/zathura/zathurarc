# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

#stop at page boundries
set scroll-page-aware
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10
set guioptions ""

# zathurarc-dark

set font "Terminus 12"
set default-bg \#1d2021
set default-fg \#d4be98

set statusbar-fg \#d4be98
set statusbar-bg \#1d2021

set inputbar-bg \#1d2021
set inputbar-fg \#d4be98

set notification-error-bg \#ea6962
set notification-error-fg \#1d2021

set notification-warning-bg \#d8a657
set notification-warning-fg \#1d2021

set completion-highlight-fg \#89b482
set completion-highlight-bg \#1d2021

set completion-bg \#1d2021
set completion-fg \#d4be98

set notification-bg \#a9b665
set notification-fg \#d4be98

set recolor
set recolor-lightcolor \#1d2021
set recolor-darkcolor \#d4be98
set recolor-reverse-video
#set recolor-keephue

set render-loading
